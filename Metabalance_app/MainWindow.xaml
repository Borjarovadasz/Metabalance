<Window x:Class="Metabalance_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:Metabalance_app.Controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metabalance"
        WindowState="Maximized"
        Background="White"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Grid>

        <!-- Ez a tartalom -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"/>

        <!-- Ez a toast overlay -->
        <controls:ToastHost x:Name="ToastHost" IsHitTestVisible="False"/>

    </Grid>
</Window>