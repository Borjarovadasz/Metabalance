<Page x:Class="Metabalance_app.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Viewbox Stretch="Uniform"
             StretchDirection="DownOnly">

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <Canvas Width="1920" Height="1744">

              
                <Image Source="logo-removebg-preview.png"
                       Canvas.Left="80"
                       Canvas.Top="20"
                       Height="50"/>

                <TextBlock Text="Metabalance"
                           FontSize="32"
                           FontWeight="Bold"
                           Canvas.Left="134"
                           Canvas.Top="24"
                           Foreground="#FFC54444"/>

                <Button Content="Bejelentkezés"
                        Width="180" Height="45"
                        Canvas.Left="1670"
                        Canvas.Top="25"
                        FontSize="20"
                        Background="Transparent"
                        BorderBrush="#888"
                        Click="Bejelentkezes_Click"/>


                <TextBlock Text="Érd el céljaidat a Metabalance-szal!"
                           FontSize="52"
                           FontWeight="Bold"
                           Width="700"
                           TextWrapping="Wrap"
                           Canvas.Left="120"
                           Canvas.Top="150"/>

                <TextBlock Text="Kövesd nyomon étkezésedet, edzéseidet és testsúlyodat..."
                           FontSize="24"
                           Width="650"
                           TextWrapping="Wrap"
                           Canvas.Left="120"
                           Canvas.Top="290"/>

   
                <Image Source="landingpage-img.png"
                       Width="626"
                       Canvas.Left="1200"
                       Canvas.Top="130"
                       Height="418">
                    <Image.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="20"
                                          ShadowDepth="6"
                                          Opacity="0.4"/>
                    </Image.Effect>
                </Image>

      
                <TextBlock Text="Fő funkcióink"
                           FontSize="48"
                           FontWeight="Bold"
                           Canvas.Left="807"
                           Canvas.Top="620"/>

  
                <Image Source="background-apple.png"
                       Width="70"
                       Canvas.Left="342"
                       Canvas.Top="760"/>
                <TextBlock Text="Személyre szabott étrend"
                           FontSize="28"
                           FontWeight="Bold"
                           Canvas.Left="200"
                           Canvas.Top="830"/>
                <TextBlock Text="Kapj egyedi étrendet céljaidhoz és preferenciáidhoz igazítva, könnyedén követhető receptekkel."
                           Width="369"
                           TextWrapping="Wrap"
                           FontSize="20"
                           Canvas.Left="200"
                           Canvas.Top="880"/>


                <Image Source="background-heart.png"
                       Width="70"
                       Canvas.Left="904"
                       Canvas.Top="762"/>
                <TextBlock Text="Egészséges receptek"
                           FontSize="28"
                           FontWeight="Bold"
                           Canvas.Left="800"
                           Canvas.Top="830"/>
                <TextBlock Text="Figyeld a súlyodat, lépéseidet, alvásodat és egyéb fontos mutatókat egy helyen."
                           Width="300"
                           TextWrapping="Wrap"
                           FontSize="20"
                           Canvas.Left="800"
                           Canvas.Top="880"/>

    
                <Image Source="background-weight.png"
                       Width="70"
                       Canvas.Left="1515"
                       Canvas.Top="769"/>
                <TextBlock Text="Közösségi támogatás"
                           FontSize="28"
                           FontWeight="Bold"
                           Canvas.Left="1400"
                           Canvas.Top="830"/>
                <TextBlock Text="Hozd ki a legtöbbet edzéseidből a személyre szabott tervekkel és részletes elemzésekkel."
                           Width="300"
                           TextWrapping="Wrap"
                           FontSize="20"
                           Canvas.Left="1400"
                           Canvas.Top="880"/>

                <Border Background="#FFDCC0C0"
                        CornerRadius="16"
                        Width="1353"
                        Height="100"
                        Canvas.Left="284"
                        Canvas.Top="1282"
                        Padding="20">

                    <TextBlock Text="“A Metabalance teljesen megváltoztatta az életmódomat!”"
                               FontSize="26"
                               TextAlignment="Center"
                               TextWrapping="Wrap" 
                               Margin="0,16,0,16"/>
                </Border>


                <TextBlock Text="Miért válaszd a Metabalance-t?"
                           FontSize="52"
                           FontWeight="Bold"
                           Width="767"
                           TextWrapping="Wrap"
                           Canvas.Left="576"
                           Canvas.Top="1088"/>

                <TextBlock Text="Egyszerű, intuitív felületünk segít, hogy minden nap a legjobb formádat hozd. Személyre szabott tervek, közösségi támogatás és szakértői tanácsok egy helyen, így könnyedén elérheted és fenntarthatod egészségügyi céljaidat."
                           Width="1074"
                           TextWrapping="Wrap"
                           FontSize="20"
                           Canvas.Left="413"
                           Canvas.Top="1192"/>

     
                <TextBlock Text="Kezdj egy egészségesebb életet még ma!"
                           FontSize="40"
                           FontWeight="Bold"
                           Canvas.Left="577"
                           Canvas.Top="1423"/>

                <Button Content="Regisztrálok"
                        Width="220" Height="60"
                        Background="#FFCA4949"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="22"
                        Canvas.Left="850"
                        Canvas.Top="1511"
                        Click="Registracio_Click"/>

                <Border 
                        Width="1920"
                        Height="120"
                        Canvas.Top="1624">

                    <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                               FontSize="18"
                               Foreground="#606060"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center" FontWeight="Bold"/>
                </Border>

            </Canvas>

        </ScrollViewer>
    </Viewbox>

</Page>
