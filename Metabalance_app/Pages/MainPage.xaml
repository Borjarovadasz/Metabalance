<Page x:Class="Metabalance_app.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F4FAF8">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <Canvas Width="1920" Height="1744" Background="#F4FAF8">

            <Border Background="#E8F5F2"
                    Height="93"
                    Width="1920"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"/>

            <Image Source="logo-removebg-preview.png"
                   Canvas.Left="80"
                   Canvas.Top="20"
                   Height="50"/>

            <TextBlock Text="Metabalance"
                       FontSize="32"
                       FontWeight="Bold"
                       Canvas.Left="134"
                       Canvas.Top="24"
                       Foreground="#264653"/>

            <Button Content="Bejelentkezés"
                    Width="180" Height="45"
                    Canvas.Left="1670"
                    Canvas.Top="25"
                    FontSize="20"
                    Background="Transparent"
                    Foreground="#264653"
                    BorderBrush="#48BFAF"
                    Click="Bejelentkezes_Click"/>

            <TextBlock Text="Érd el céljaidat a Metabalance-szal!"
                       FontSize="52"
                       FontWeight="Bold"
                       Width="700"
                       TextWrapping="Wrap"
                       Canvas.Left="120"
                       Canvas.Top="150"
                       Foreground="#264653"/>

            <TextBlock Text="Kövesd nyomon étkezésedet, edzéseidet és testsúlyodat egyszerűen. Egészséges életmód, fenntartható eredmények."
                       FontSize="24"
                       Width="466"
                       TextWrapping="Wrap"
                       Canvas.Left="120"
                       Canvas.Top="315"
                       Foreground="#52796F"/>


            <Image Source="landingpage-img.png"
                   Width="626"
                   Canvas.Left="1200"
                   Canvas.Top="130"
                   Height="418">
                <Image.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="20"
                                      ShadowDepth="6"
                                      Opacity="0.25"/>
                </Image.Effect>
            </Image>


            <TextBlock Text="Fő funkcióink"
                       FontSize="48"
                       Canvas.Left="807"
                       Canvas.Top="620"
                       Foreground="#264653" FontWeight="Bold"/>

            <Border Background="#FFFFFF"
                    CornerRadius="18"
                    Height="306" Width="452"
                    Canvas.Left="151" Canvas.Top="735"/>

            <Border Background="#FFFFFF"
                    CornerRadius="18"
                    Height="306" Width="452"
                    Canvas.Left="743" Canvas.Top="735"/>

            <Border Background="#FFFFFF"
                    CornerRadius="18"
                    Height="306" Width="452"
                    Canvas.Left="1324" Canvas.Top="735"/>



            <Image Source="background-apple.png"
                   Width="70"
                   Canvas.Left="342"
                   Canvas.Top="760"/>
            <TextBlock Text="Személyre szabott étrend"
                       FontSize="28"
                       FontWeight="Bold"
                       Canvas.Left="200"
                       Canvas.Top="830"
                       Foreground="#264653"/>
            <TextBlock Text="Kapj egyedi étrendet céljaidhoz és preferenciáidhoz igazítva, könnyedén követhető receptekkel."
                       Width="369"
                       TextWrapping="Wrap"
                       FontSize="20"
                       Canvas.Left="200"
                       Canvas.Top="880"
                       Foreground="#52796F"/>



            <Image Source="background-heart.png"
                   Width="70"
                   Canvas.Left="934"
                   Canvas.Top="765"/>
            <TextBlock Text="Egészséges receptek"
                       FontSize="28"
                       FontWeight="Bold"
                       Canvas.Left="836"
                       Canvas.Top="830"
                       Foreground="#264653"/>
            <TextBlock Text="Figyeld a súlyodat, lépéseidet, alvásodat és egyéb fontos mutatókat egy helyen."
                       Width="300"
                       TextWrapping="Wrap"
                       FontSize="20"
                       Canvas.Left="836"
                       Canvas.Top="880"
                       Foreground="#52796F"/>


            <Image Source="background-weight.png"
                   Width="70"
                   Canvas.Left="1515"
                   Canvas.Top="769"/>
            <TextBlock Text="Közösségi támogatás"
                       FontSize="28"
                       FontWeight="Bold"
                       Canvas.Left="1400"
                       Canvas.Top="830"
                       Foreground="#264653"/>
            <TextBlock Text="Hozd ki a legtöbbet edzéseidből a személyre szabott tervekkel és részletes elemzésekkel."
                       Width="300"
                       TextWrapping="Wrap"
                       FontSize="20"
                       Canvas.Left="1400"
                       Canvas.Top="880"
                       Foreground="#52796F"/>


            <Border Background="#FFFFFF"
                    CornerRadius="16"
                    Width="1353"
                    Height="110"
                    Canvas.Left="284"
                    Canvas.Top="1282"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="12"
                                      ShadowDepth="4"
                                      Opacity="0.15"/>
                </Border.Effect>

                <TextBlock Text="“A Metabalance teljesen megváltoztatta az életmódomat!”"
                           FontSize="26"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="#264653" Margin="0,7,0,-7"/>
            </Border>


            <TextBlock Text="Miért válaszd a Metabalance-t?"
                       FontSize="52"
                       FontWeight="Bold"
                       Width="767"
                       TextWrapping="Wrap"
                       Canvas.Left="576"
                       Canvas.Top="1088"
                       Foreground="#264653"/>

            <TextBlock Text="Egyszerű, intuitív felületünk segít, hogy minden nap a legjobb formádat hozd..."
                       Width="1074"
                       TextWrapping="Wrap"
                       FontSize="20"
                       Canvas.Left="604"
                       Canvas.Top="1180"
                       Foreground="#52796F"/>

            <TextBlock Text="Kezdj egy egészségesebb életet még ma!"
                       FontSize="40"
                       FontWeight="Bold"
                       Canvas.Left="577"
                       Canvas.Top="1423"
                       Foreground="#264653"/>

            <Button Content="Regisztrálj most!"
                    Width="766" Height="60"
                    Background="#FFFF4600"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="22"
                    Canvas.Left="577"
                    Canvas.Top="1511"
                    Click="Registracio_Click"/>


            <Border Width="1920"
                    Height="120"
                    Canvas.Top="1624"
                    Background="#E8F5F2">

                <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                           FontSize="18"
                           Foreground="#52796F"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           FontWeight="Bold"/>
            </Border>

            <Image Source="/Pages/navbar-login-icon.png"
                Canvas.Left="1850"
                Canvas.Top="22"
                Height="50"/>
        </Canvas>
    </ScrollViewer>
</Page>
