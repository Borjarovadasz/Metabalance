<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Metabalance_app.Pages.MainPage"
      Background="#F4FAF8" Width="1920">

    <Grid>
        <ScrollViewer
                  HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Hidden" Margin="10,0,0,0">
            <Canvas
        Height="1965">
                <TextBlock
        Width="700" Canvas.Top="90" Text="Érd el céljaidat a Metabalance-szal!" TextWrapping="Wrap" Canvas.Left="126" FontSize="60" FontWeight="Bold" Foreground="#264653"/>
                <TextBlock
        Width="466" VerticalAlignment="Top" Canvas.Top="274" Text="Kövesd nyomon étkezésedet, edzéseidet és testsúlyodat egyszerűen. Egészséges életmód, fenntartható eredmények." TextWrapping="Wrap" Canvas.Left="126" HorizontalAlignment="Center" FontSize="24" Foreground="#52796F"/>
                <Image
        Width="626" VerticalAlignment="Top" Canvas.Top="95" Source="/Pages/landingpage-img.png" Canvas.Left="1236" Height="418" HorizontalAlignment="Left">
                    <Image.Effect
        >
                        <DropShadowEffect
        ShadowDepth="6" Opacity="0.25" Color="Black" BlurRadius="20"/>
                    </Image.Effect>
                </Image>
                <TextBlock
        Canvas.Top="587" Text="Fő funkcióink" RenderTransformOrigin="0.523,0.768" Canvas.Left="806" FontSize="48" FontWeight="Bold" Foreground="#264653"/>
                <Border
        Width="452" VerticalAlignment="Center" Canvas.Top="707" Canvas.Left="126" Height="306" HorizontalAlignment="Left" CornerRadius="18" Background="#FFFFFF">
                    <Canvas>
                        <Image
        Width="70" Canvas.Top="61" Source="/Pages/background-apple.png" Canvas.Left="191" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBlock
        Canvas.Top="121" Text="Személyre szabott étrend" RenderTransformOrigin="1.179,-22.501" Canvas.Left="107" FontSize="20" FontWeight="Bold" Foreground="#264653" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBlock
        Width="368" Canvas.Top="153" Text="Kapj egyedi étrendet céljaidhoz és preferenciáidhoz igazítva, könnyedén követhető receptekkel." TextWrapping="Wrap" Canvas.Left="42" FontSize="20" Foreground="#52796F" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </Border>
                <Border
        Width="452" Canvas.Top="707" Canvas.Left="732" Height="306" CornerRadius="18">
                    <Canvas>
                        <TextBlock Width="300" Canvas.Top="158" Text="Figyeld a súlyodat, lépéseidet, alvásodat és egyéb fontos mutatókat egy helyen." TextWrapping="Wrap" Canvas.Left="76" FontSize="20" Foreground="#52796F" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Image Width="70" Canvas.Top="70" Source="/Pages/background-heart.png" Canvas.Left="191" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBlock Width="373" Text="Egészségügyi adatok nyomon követése" FontSize="20" FontWeight="Bold" Foreground="#264653" Canvas.Left="55" Canvas.Top="126" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Canvas>
                </Border>
                <Border
        Width="452" Canvas.Top="707" Canvas.Left="1323" Height="306" CornerRadius="18" Background="#FFFFFF">
                    <Canvas>
                        <Image
        Width="70" Canvas.Top="60" Source="/Pages/background-weight.png" Canvas.Left="191" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-17.571,-4.671"/>
                        <TextBlock
        Width="300" Canvas.Top="153" Text="Hozd ki a legtöbbet edzéseidből a személyre szabott tervekkel és részletes elemzésekkel." TextWrapping="Wrap" Canvas.Left="76" FontSize="20" Foreground="#52796F" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBlock Width="373" Text="Edzésterv és tevékenységkövetés" FontSize="20" FontWeight="Bold" Foreground="#264653" Canvas.Left="69" Canvas.Top="126" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Canvas>
                </Border>
                <Border
        Width="1352" VerticalAlignment="Top" Canvas.Top="1421" Padding="20" Canvas.Left="279" Height="110" HorizontalAlignment="Left" CornerRadius="16" Background="#FFFF8484">
                    <Border.Effect
        >
                        <DropShadowEffect
        ShadowDepth="4" Opacity="0.15" Color="Black" BlurRadius="12"/>
                    </Border.Effect>
                    <TextBlock
        Text="“A Metabalance teljesen megváltoztatta az étkezési szokásaimat. Végre tudatosan figyelek a táplálkozásomra, és sosem éreztem magam ilyen energikusnak!”" TextWrapping="Wrap" TextAlignment="Center" Margin="20,0,-20,0" FontSize="26" Foreground="#264653"/>
                </Border>
                <TextBlock
        Width="768" Canvas.Top="1154" Text="Miért válaszd a Metabalance-t?" TextWrapping="Wrap" Canvas.Left="570" FontSize="52" FontWeight="Bold" Foreground="#264653" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock
        Width="1074" Canvas.Top="1317" Text="Egyszerű, intuitív felületünk segít, hogy minden nap a legjobb formádat hozd. Személyre szabott tervek, közösségi támogatás és szakértői tanácsok egy helyen, így könnyedén elérheted és fenntarthatod egészségügyi céljaidat." TextWrapping="Wrap" Canvas.Left="418" FontSize="20" Foreground="#52796F"/>
                <TextBlock
        Canvas.Top="1593" Text="Kezdj egy egészségesebb életet még ma!" Canvas.Left="576" FontSize="40" FontWeight="Bold" Foreground="#264653" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Button
        Width="766" Canvas.Top="1706" Canvas.Left="572" Height="60" FontSize="22" Foreground="White" Content="Regisztrálj most!" Click="Registracio_Click" BorderThickness="0" Background="#FFFF4600"/>
                <Border
        Width="1917" VerticalAlignment="Top" Canvas.Top="1848" Height="117" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="Black" Background="#FFDAD5D5">
                    <TextBlock
        Text="© 2025 Metabalance. Minden jog fenntartva." TextWrapping="Wrap" TextAlignment="Center" Margin="301,46,302,-1" FontSize="26" Foreground="#264653"/>
                </Border>
            </Canvas>
        </ScrollViewer>
        <Grid Height="52" Width="1920" Background="#F0F8F8" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border Background="#FFED3C3C"
                    Height="52"
                    Width="1920"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.032"/>
                        <RotateTransform/>
                        <TranslateTransform X="0.015"/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>

            <Image


        VerticalAlignment="Top" Source="/Pages/profileicon-removebg-preview.png" OpacityMask="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="51" HorizontalAlignment="Left" Margin="1740,2,0,0"/>


            <Button


        Width="45" VerticalAlignment="Center" Height="52" HorizontalAlignment="Left" FontSize="16" Foreground="White" Content="X" Click="Exit" BorderThickness="0" BorderBrush="#FFDC4747" Background="#FFED3C3C" Margin="1877,0,0,0"/>


            <Button


        Width="45" VerticalAlignment="Top" Height="54" HorizontalAlignment="Left" FontSize="16" Foreground="White" Content="▢" Click="Maximize" BorderThickness="0" Background="#FFED3C3C" Margin="1832,0,0,0"/>


            <Button


        Width="45" VerticalAlignment="Center" Height="52" HorizontalAlignment="Left" FontSize="16" Foreground="White" Content="–" Click="Minimize" BorderThickness="0" BorderBrush="#FFDC4747" Background="#FFED3C3C" Margin="1787,0,0,0"/>
            <Image


        Source="logo-removebg-preview.png" Margin="130,2,1741,0"/>
            <TextBlock


        Text="Metabalance" FontSize="32" FontWeight="Bold" Foreground="#264653" Margin="184,4,1543,5"/>
            <Button


        Width="180" VerticalAlignment="Center" Height="46" HorizontalAlignment="Left" FontSize="20" Foreground="#264653" Content="Bejelentkezés" Click="Bejelentkezes_Click" BorderBrush="#FFFF7979" Background="Transparent" Margin="1560,0,0,0"/>
        </Grid>
    </Grid>
</Page>
