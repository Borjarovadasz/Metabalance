<Page x:Class="Metabalance_app.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF5F7FB">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#FFE8E8E8" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Border Background="#FFF97979" CornerRadius="8" Width="28" Height="28" VerticalAlignment="Center">
                        <TextBlock Text="👤" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                    </Border>
                    <TextBlock Text="Profilom" Margin="10,0,0,0" VerticalAlignment="Center"
                               FontSize="16" FontWeight="SemiBold" Foreground="#264653"/>
                </StackPanel>

                <Grid Grid.Column="1"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                    <Image x:Name="TopAvatar" Width="28" Height="28" Margin="0,0,10,0"/>
                    <Button Content="Kijelentkezés" Click="Logout_Click"
                            Height="30" Padding="12,0" Margin="0,0,14,0"
                            Background="White" BorderBrush="#FFE6E6E6"/>

                    <Button Width="40" Height="30" Content="–" Background="White" BorderThickness="0"
                            Click="Minimize_Click" Margin="2,0"/>
                    <Button Width="40" Height="30" Content="▢" Background="White" BorderThickness="0"
                            Click="Maximize_Click" Margin="2,0"/>
                    <Button Width="40" Height="30" Content="X" Background="White" BorderThickness="0"
                            Click="Close_Click" Margin="2,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="14" BorderBrush="#FFE8E8E8" BorderThickness="1">
                <StackPanel Margin="18">
                    <Border CornerRadius="60" Width="120" Height="120" HorizontalAlignment="Center" Margin="0,8,0,10"
                            Background="#FFF5F7FB">
                        <Image x:Name="SideAvatar" Stretch="UniformToFill"/>
                    </Border>

                    <TextBlock x:Name="SideNameText"
                               FontSize="16" FontWeight="SemiBold" Foreground="#264653"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="SideEmailText"
                               Foreground="#888" Margin="0,2,0,14"
                               HorizontalAlignment="Center"/>

                    <Border Background="#FFFFEDED" CornerRadius="10" Padding="10" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" Margin="0,0,8,0"/>
                            <TextBlock Text="Profilom" Foreground="#E74C3C" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Profil szerkesztése"
                               FontSize="26" FontWeight="Bold" Foreground="#264653"
                               Margin="0,6,0,0"/>

                    <Border Grid.Row="2" Background="White" CornerRadius="14" Padding="18"
                            BorderBrush="#FFE8E8E8" BorderThickness="1"
                            HorizontalAlignment="Stretch">
                        <StackPanel>
                            <TextBlock Text="Profilkép" FontSize="16" FontWeight="SemiBold" Foreground="#264653"/>

                            <Grid Margin="0,14,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="92" Height="92" CornerRadius="12" Background="#FFF5F7FB">
                                    <Image x:Name="MainAvatar" Stretch="UniformToFill"/>
                                </Border>

                                <Button Grid.Column="1" Content="Kép feltöltése" Click="UploadPhoto_Click"
                                        Height="34" Padding="14,0"
                                        HorizontalAlignment="Left" Margin="12,26,0,0"
                                        Background="White" BorderBrush="#FFE6E6E6"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="4" Background="White" CornerRadius="14" Padding="18"
                            BorderBrush="#FFE8E8E8" BorderThickness="1"
                            HorizontalAlignment="Stretch">
                        <StackPanel>
                            <TextBlock Text="Alapvető információk" FontSize="16" FontWeight="SemiBold" Foreground="#264653"/>

                            <TextBlock Text="Név" Margin="0,14,0,6" Foreground="#777"/>
                            <TextBox x:Name="NameBox" Height="34" Padding="10,0" VerticalContentAlignment="Center"
                                     BorderBrush="#FFE6E6E6" BorderThickness="1"/>

                            <TextBlock Text="E-mail" Margin="0,12,0,6" Foreground="#777"/>
                            <TextBox x:Name="EmailBox" Height="34" Padding="10,0" VerticalContentAlignment="Center"
                                     BorderBrush="#FFE6E6E6" BorderThickness="1"/>

                            <TextBlock Text="Telefonszám" Margin="0,12,0,6" Foreground="#777"/>
                            <TextBox x:Name="PhoneBox" Height="34" Padding="10,0" VerticalContentAlignment="Center"
                                     BorderBrush="#FFE6E6E6" BorderThickness="1"/>

                            <TextBlock Text="Nem" Margin="0,12,0,6" Foreground="#777"/>
                            <ComboBox x:Name="GenderBox" Height="34" BorderBrush="#FFE6E6E6" BorderThickness="1">
                                <ComboBoxItem Content="Férfi"/>
                                <ComboBoxItem Content="Nő"/>
                                <ComboBoxItem Content="Egyéb"/>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                                <Button Content="Mégse" Click="Cancel_Click"
                                        Height="34" Padding="14,0" Margin="0,0,10,0"
                                        Background="White" BorderBrush="#FFE6E6E6"/>
                                <Button Content="Változtatások mentése" Click="Save_Click"
                                        Height="34" Padding="14,0"
                                        Background="#FFF97979" Foreground="White" BorderBrush="#FFF97979"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>
            </ScrollViewer>
        </Grid>

        <Border Grid.Row="2" Background="Transparent">
            <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                       Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>