<Page x:Class="Metabalance_app.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF5F7FB" Height="796" Width="771">

    <Page.Resources>

        <!-- Kártya -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="BorderBrush" Value="#FFE8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Címek -->
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#264653"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#264653"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="Label" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#777"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
        </Style>

        <!-- Input -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#FFE6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Primary gomb -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Background" Value="#FFF97979"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFF97979"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost gomb -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#264653"/>
            <Setter Property="BorderBrush" Value="#FFE6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Topbar ikon gomb -->
        <Style x:Key="TopIconButton" TargetType="Button">
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0,0,0">
                <Border Background="#FFF97979" CornerRadius="8" Width="32" Height="32" VerticalAlignment="Center">
                    <TextBlock Text="👤" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                </Border>
                <TextBlock Text="Profilom" Margin="10,0,0,0" VerticalAlignment="Center"
                           FontSize="16" FontWeight="SemiBold" Foreground="#264653"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <!-- kis profil ikon -->
                <Border Width="32" Height="32" CornerRadius="16" Background="#FFF5F7FB" Margin="0,0,10,0" ClipToBounds="True">
                    <Image x:Name="TopAvatar" Stretch="UniformToFill"/>
                </Border>

                <Button Content="Kijelentkezés"
                        Style="{StaticResource GhostButton}"
                        Height="32"
                        Padding="12,0"
                        Click="Logout_Click"
                        Margin="0,0,12,0" Width="88"/>

                <!-- ablak gombok (ha WindowStyle=None) -->
                <Button Style="{StaticResource TopIconButton}" Content="–" Click="Minimize_Click"/>
                <Button Style="{StaticResource TopIconButton}" Content="▢" Click="Maximize_Click"/>
                <Button Style="{StaticResource TopIconButton}" Content="X" Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24" MaxWidth="1200" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280" MinWidth="220"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDEBAR CARD -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Border Width="86" Height="86" CornerRadius="43" Background="#FFF5F7FB" ClipToBounds="True" HorizontalAlignment="Center" Margin="0,8,0,10">
                            <Image x:Name="SideAvatar" Stretch="UniformToFill"/>
                        </Border>

                        <TextBlock x:Name="SideNameText"
                                   Text="Mészáros Nándor"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="#264653"/>

                        <TextBlock x:Name="SideEmailText"
                                   Text="nandor.meszaros@example.com"
                                   HorizontalAlignment="Center"
                                   Foreground="#888"
                                   Margin="0,4,0,14"
                                   TextWrapping="Wrap"/>

                        <Border CornerRadius="10" Background="#FFFFEDED" Padding="10">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="👤" Margin="0,0,8,0"/>
                                <TextBlock Text="Profilom" Foreground="#E74C3C" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- RIGHT CONTENT -->
                <StackPanel Grid.Column="2">

                    <TextBlock Text="Profil szerkesztése" Style="{StaticResource H1}" Margin="0,0,0,18"/>

                    <!-- Profilkép -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Profilkép" Style="{StaticResource SectionTitle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="72" Height="72" CornerRadius="36" Background="#FFF5F7FB" ClipToBounds="True">
                                    <Image x:Name="MainAvatar" Stretch="UniformToFill"/>
                                </Border>

                                <Button Grid.Column="2"
                                        Content="Kép feltöltése"
                                        Style="{StaticResource GhostButton}"
                                        Width="140"
                                        HorizontalAlignment="Left"
                                        Click="UploadPhoto_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Alapinfók -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Alapvető információk" Style="{StaticResource SectionTitle}"/>

                            <TextBlock Text="Név" Style="{StaticResource Label}"/>
                            <TextBox x:Name="NameBox" Style="{StaticResource InputStyle}" Text="Mészáros Nándor"/>

                            <TextBlock Text="E-mail" Style="{StaticResource Label}"/>
                            <TextBox x:Name="EmailBox" Style="{StaticResource InputStyle}" Text="nandor.meszaros@example.com"/>

                            <TextBlock Text="Telefonszám" Style="{StaticResource Label}"/>
                            <TextBox x:Name="PhoneBox" Style="{StaticResource InputStyle}" Text="+36 30 123 4567"/>

                            <TextBlock Text="Nem" Style="{StaticResource Label}"/>
                            <ComboBox x:Name="GenderBox" Height="36" Padding="10,0" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Férfi" IsSelected="True"/>
                                <ComboBoxItem Content="Nő"/>
                                <ComboBoxItem Content="Egyéb"/>
                            </ComboBox>

                            <!-- gombok -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                                <Button Content="✕  Mégse" Style="{StaticResource GhostButton}" Click="Cancel_Click" Margin="0,0,10,0" Width="70"/>
                                <Button Content="💾  Változtatások mentése" Style="{StaticResource PrimaryButton}" Click="Save_Click" Width="165"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </Grid>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#FFEDEDED">
            <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                       Foreground="#777"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
