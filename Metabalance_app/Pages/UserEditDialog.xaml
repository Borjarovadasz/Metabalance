<Window x:Class="Metabalance_app.Pages.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Felhasználó szerkesztése"
        Width="460" Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Border Background="White" CornerRadius="12" Padding="18" Margin="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Felhasználó szerkesztése"
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="#264653"
                       Margin="0,0,0,14"/>

            <TextBlock Grid.Row="1" Text="Név (nem szerkeszthető)" Foreground="#777"/>
            <TextBox Grid.Row="2"
                     x:Name="TbName"
                     Height="34"
                     IsReadOnly="True"
                     Background="#FFF3F3F3"
                     BorderBrush="#FFE6E6E6"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,6,0,12"/>

            <TextBlock Grid.Row="3" Text="Email" Foreground="#777"/>
            <TextBox Grid.Row="4"
                     x:Name="TbEmail"
                     Height="34"
                     BorderBrush="#FFE6E6E6"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,6,0,12"/>

            <StackPanel Grid.Row="5">
                <TextBlock Text="Új jelszó (üres = nem változik)" Foreground="#777"/>
                <PasswordBox x:Name="PbPassword"
                             Height="34"
                             BorderBrush="#FFE6E6E6"
                             Padding="10,0"
                             Margin="0,6,0,12"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Szerepkör" Foreground="#777"/>
                        <ComboBox x:Name="CbRole"
                                  Height="34"
                                  Margin="0,6,0,0">
                            <ComboBoxItem Content="user"/>
                            <ComboBoxItem Content="admin"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Aktív" Foreground="#777"/>
                        <CheckBox x:Name="ChkActive"
                                  Content="Engedélyezve"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Mégse" Width="90" Height="34" Margin="0,0,10,0"
                        Click="Cancel_Click"/>
                <Button Content="Mentés" Width="110" Height="34"
                        Background="#FFF97979" Foreground="White" BorderBrush="#FFF97979"
                        Click="Save_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>