<Page x:Class="Metabalance_app.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F6FA" Width="1051" Height="490">

    <Page.Resources>

        <!-- Kártya -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="BorderBrush" Value="#FFE8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Primary gomb -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Background" Value="#FFF97979"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFF97979"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Outline gomb -->
        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FFF97979"/>
            <Setter Property="BorderBrush" Value="#FFF97979"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger gomb -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FFE74C3C"/>
            <Setter Property="BorderBrush" Value="#FFE74C3C"/>
        </Style>

        <!-- Input -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#FFE6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Header ikon gomb -->
        <Style x:Key="TopIconButton" TargetType="Button">
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Page.Resources>

    <!-- TOPBAR + CONTENT -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Image Source="/Pages/img/logo-removebg-preview.png" Height="36"/>
                <TextBlock Text="Metabalance" FontSize="26" FontWeight="Bold" Foreground="#264653" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <Button Content="Kijelentkezés"
                        Height="36"
                        Padding="14,0"
                        Background="White"
                        BorderBrush="#FFE6E6E6"
                        BorderThickness="1"
                        Click="Logout_Click"
                        Margin="0,0,12,0"/>

                <Button Style="{StaticResource TopIconButton}" Content="–" Click="Minimize_Click"/>
                <Button Style="{StaticResource TopIconButton}" Content="▢" Click="Maximize_Click"/>
                <Button Style="{StaticResource TopIconButton}" Content="X" Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Margin="-89,0,0,0">
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition x:Name="SideCol" Width="260" MinWidth="70"/>
                <!-- Content -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#FFE8E8E8"
                    BorderThickness="0,0,1,0"
                    Margin="-28,0,10,0">
                <DockPanel LastChildFill="True">
                    <StackPanel Margin="18,18,18,10">
                        <TextBlock Text="Admin Kezelőpult" FontSize="16" FontWeight="SemiBold" Foreground="#264653"/>
                    </StackPanel>

                    <StackPanel Margin="10">
                        <Border CornerRadius="10" Background="#FFF5F7FB" Padding="10" Margin="0,8,0,8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Áttekintés" Foreground="#264653" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="UsersNavItem" CornerRadius="10" Background="#FFFFEDED" Padding="10" Margin="0,0,0,8" Width="120">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="UsersNavText" Text="Felhasználók" Foreground="#E74C3C" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="10" Background="Transparent" Padding="10">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="ReportsNavText" Text="Jelentések" Foreground="#264653" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- CONTENT -->
            <Grid Grid.Column="1" Margin="18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Felhasználókezelés"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#264653"
                           Margin="2,2,2,12"/>

                <!-- Toolbar -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBox"
                             Style="{StaticResource SearchBoxStyle}"
                             Text="Felhasználók keresése..."
                             Foreground="#888"/>

                    <Button Grid.Column="1"
                            Style="{StaticResource PrimaryButton}"
                            Margin="12,0,0,0"
                            Content="+ Új felhasználó hozzáadása"
                            Click="AddUser_Click"/>
                </Grid>

                <!-- Table card -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Felhasználók listája"
                                   Foreground="#777"
                                   Margin="0,0,0,12"/>

                        <DataGrid Grid.Row="1"
                                  x:Name="UsersGrid"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  CanUserResizeRows="False"
                                  RowHeight="44"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="White"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding Users}">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Név" Binding="{Binding nev}" Width="2*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="3*"/>
                                <DataGridTextColumn Header="Szerepkör" Binding="{Binding szerepkor}" Width="1.2*"/>

                                <DataGridTemplateColumn Header="Aktív" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding aktiv}" Foreground="#777" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Műveletek" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Style="{StaticResource OutlineButton}"
                                                        Content="Szerkesztés"
                                                        Margin="0,0,10,0"
                                                        Tag="{Binding}"
                                                        Click="EditUser_Click"/>

                                                <Button Style="{StaticResource DangerButton}"
                                                        Content="Törlés"
                                                        Tag="{Binding}"
                                                        Click="DeleteUser_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>