<Window x:Class="Metabalance_app.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="600" Height="350"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid Background="#F4FAF8"
         
          Margin="10">

        <!-- Shadow -->
        <Grid.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="25"
                              ShadowDepth="0"
                              Opacity="0.25"/>
        </Grid.Effect>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Image Source="Pages/logo-removebg-preview.png"
                   Width="140"
                   Margin="0,0,0,18"/>

            <TextBlock Text="Metabalance"
                       FontSize="34"
                       FontWeight="Bold"
                       Foreground="#264653"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,28"/>

            <!-- Loading animation -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Ellipse Width="12" Height="12" Fill="#48BFAF" Margin="3">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.2" To="1"
                                                     Duration="0:0:0.6"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <Ellipse Width="12" Height="12" Fill="#48BFAF" Margin="3">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard BeginTime="0:0:0.2" RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.2" To="1"
                                                     Duration="0:0:0.6"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <Ellipse Width="12" Height="12" Fill="#48BFAF" Margin="3">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard BeginTime="0:0:0.4" RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.2" To="1"
                                                     Duration="0:0:0.6"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
